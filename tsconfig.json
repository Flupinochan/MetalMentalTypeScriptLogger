{
  "compilerOptions": {
    "target": "ESNext",                        
    "module": "ESNext",                        
    "moduleResolution": "Node",                
    "declaration": true,                       
    "declarationMap": true,                    
    "outDir": "./dist",                        
    "strict": true,                            
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,  
    "sourceMap": true,                         
    "removeComments": true,                    
    "lib": ["ESNext", "DOM"],                  
    "types": ["node"]                          
  },
  "include": ["src"],                          
  "exclude": ["node_modules", "dist"]          
}
